<div class="swiper-slide">
  <a href="{{ product.url }}">
    <div class="product-card-image-container">
      <img class="image" src="{{ product.featured_image | image_url }}" loading="lazy" width="100" height="100">
      {% if product.compare_at_price %}
        <p style="color: red; font-size: 1.25rem; position: absolute; top: 0; left: 0; font-weight: bold; padding: .5rem; background-color: black;">SALE</p>
      {% endif %}

    </div>
  </a>

  <div class="product-card-price-info">
    <p class="product-title">{{ product.title | link_to: product.url | strip_html }}</p>

    <div style="display: flex; gap: .5rem; align-items: center;">

      {% if product.compare_at_price %}
        <p style="color: gray; text-decoration: line-through; font-size: 1.5rem; display: flex; align-items: center;"> <span style="color: gray;"> {% render 'icon-cash' %}</span><span>{{ product.compare_at_price | money | strip_html }}</span></p>
      {% endif %}
      <p class="product-price">
        <span style="color: black;"> {% render 'icon-cash-black' %}</span>
        <span>{{ product.price | money | strip_html }}</span>
      </p>

    </div>
   
  </div>
  {% render 'icon-star' %}
</div>
