

  {% if section.settings.heading != blank %}
    <div class="section-heading-container">
      <h3><span class="section-heading">{{ section.settings.heading | strip_html }}</span></h3>
    </div>
  {% endif %}

  <div class="discount-main-content">

    {% for block in section.blocks %}
      
      <div class="discount-main-container">
        <div class="discount-image-container">
          <img
            class="discount-image image"
            src="{{ block.settings.collection.featured_image | image_url }}"
            loading="lazy"
            height="100"
            width="100"
          > 
        </div>

        <div class="discount-title-container">
          <h4 class="discount-title">{{ block.settings.collection.title | strip_html }}</h4>
        </div>
        <div class="discount-description-container">
          <p class="discount-description">{{ block.settings.collection.description | strip_html }}</p>
        </div>

        <div class="discount-image-overlay" style="background-color:{{ block.settings.overlay_color }}"></div>
        <button class="btn-secondary discount-btn">SHOP NOW</button>
      </div>

    {% endfor %}
  </div>


{% schema %}
{
  "name": "Discount banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section title"
    }
  ],
  "limit": 2,
  "class": "discount-banner__main-container  page-width section",
  "tag": "section",
  "presets": [{ "name": "Discount banner" }],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Discount",
      "type": "discount",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "body_text",
          "label": "Discount details"
        },
        {
          "type": "richtext",
          "label": "Discount heading",
          "id": "discount_heading"
        },
        {
          "type": "color",
          "label": "Overlay color",
          "id": "overlay_color"
        }
      ]
    }
  ]
}
{% endschema %}
