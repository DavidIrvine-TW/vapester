<div class="section-id-{{ section.id }}">

    <div class="section-heading-container">
        {% if section.settings.section_subtitle != blank %}
            <p class="section-subheading">{{ section.settings.section_subtitle | strip_html }}</p>
        {% endif %}

        {% if section.settings.section_heading != blank %}
            <h4><span class="section-heading">{{ section.settings.section_heading | strip_html }}</span></h4>
        {% endif %}


    </div>
    




    <div class="aux-section-content-container" >

        {% for block in section.blocks %}
            <div class="aux-image-container" >
                <img class="aux-image image" src="{{ block.settings.social_image | image_url }}" loading="lazy" height="100" width="100">
            </div>
        {% endfor %}

    </div>
    
</div>



{% schema %}
{
    "name": "Auxiliary Content",
    "settings": [
        {
            "type": "richtext",
            "id": "section_heading",
            "label": "Section heading"
        },
        {
            "type": "text",
            "id": "section_subtitle",
            "label": "Title subtext"
        }
    ],
    "limit": 1,
    "tag": "section",
    "class": "aux-content__main-container section page-width",
    "presets": [
        {
            "name": "Auxiliary content"
        }
    ],
    "max_blocks": 8,
    "blocks": [
        {
            "name": "Content",
            "type": "content",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "social_image",
                    "label": "Image"
                }
            ]
        }
    ]
}
{% endschema %}