<div class="section-page-banner-alternate">
  <img class="image" loading="lazy" width="100" height="100" src="{{ section.settings.banner_backdrop | image_url }}">
  <div class="section-page-banner-alternate-inner page-width">
    <div class="section-page-banner-alternate-title-container">
        <h3><span class="section-page-banner-alternate-heading">{{ section.settings.banner_heading |  strip_html }}</span></h3>  
        <p class="section-page-banner-alternate-message">{{ section.settings.banner_message |  strip_html }}</p> 
    </div>
   
  </div>
</div>


{% schema %}
{
"name":"Page banner alternate",
"settings" : [
{
"type": "richtext",
"id": "banner_heading",
"label" : "Banner heading"
},
{
"type":"image_picker",
"id": "banner_backdrop",
"label": "Banner image"
},
{
"type": "richtext",
"id": "banner_message",
"label" : "Banner message"

}
],
"presets" : [{"name" : "Page banner alt"}],
"limit" : 2,
"tag": "section",
"class" : "section-page-banner-alternate__main-container section page-width"
}
{% endschema %}