{% comment %} mobile carousel {% endcomment %}
{% comment %}
  <div id="image__banner-container-mobile" style="width: 100%; height: 390px; overflow: hidden; display: none">
    <div id="pair1" style="display: flex; width: 100%; height: 100%; position: relative;">
      <div class="img-cont" style=" position: relative; left: 0; min-width: 50%; height: 100%">
        <img
          class="image"
          src="{{ 'banner-1-copyright.jpg' | asset_url }}"
          loading="eager"
          width="100"
          height="100"
          style="width: 100%; height: 100%; object-fit: cover;"
        >
      </div>

      <div class="img-cont" style=" position: absolute; left: 50%; max-width: 50%; height: 100%; z-index: -10;">
        <img
          class="image"
          src="{{ 'image.png' | asset_url }}"
          loading="eager"
          width="100"
          height="100"
          style="width: 100%; height: 100%; object-fit: cover;"
        >
      </div>
    </div>
  </div>
{% endcomment %}

{% comment %} desktop carousel {% endcomment %}
<div id="image__banner-container">
  <div id="pair1" class="image-container">
    <div class="image-container-left">
      <img
        class="image-individual"
        src="{{ section.settings.image1 | image_url }}"
        loading="eager"
        width="100"
        height="100"
      >
        <div class="image-overlay"></div>
    </div>

    <div class="image-backdrop">
      <img src="{{ section.settings.image2 | image_url }}" loading="eager" width="100" height="100">
    </div>

