<div class="section-featured-collection page-width">
  <div class="section-heading-container">
    {% if section.settings.title_subtext != blank %}
      <p class="section-subheading">{{ section.settings.title_subtext | strip_html }}</p>
    {% endif %}
    {% if section.settings.section_title == blank %}
      <h3><span class="section-heading">{{ collections['best-sellers'].title | strip_html }}</span></h3>
    {% else %}
      <h3><span class="section-heading">{{ section.settings.section_title | strip_html }}</span></h3>
    {% endif %}
  </div>

  <div class="featuredSwiper">
    <div class="swiper-wrapper">
      {% for product in collections['best-sellers'].products %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
    {% comment %} <div id="featured-swiper-pagination" class="swiper-pagination"></div> {% endcomment %}
  </div>

  <div class="" style="margin-top: 3rem; display: flex; gap: 2rem">
    <div>
      <button
        class="btn-primary"
        type="button " 
      >
        SHOP OTHER BEST SELLERS
      </button>
    </div>
    <div style="position: relative; width: 150px;">
      <div class="swiper-button-prev feat-cont-swiper-btn feat-cont-swiper-prev-btn"></div>
      <div class="swiper-button-next feat-cont-swiper-btn feat-cont-swiper-next-btn"></div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "richtext",
      "id": "section_title",
      "label": "Section title"
    },
    {
      "id": "title_subtext",
      "type": "textarea",
      "label": "Section description"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    }
  ],
  "presets": [{ "name": "Featured collection" }],
  "tag": "section",
  "class": "featured-collection__main-container section page-width",
  "limit": 1
}
{% endschema %}
