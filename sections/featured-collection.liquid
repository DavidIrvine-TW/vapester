<div class="section-featured-collection page-width">
 <div class="section-heading-container">
    {% if section.settings.title_subtext != blank %}
      <p class="section-subheading">{{ section.settings.title_subtext | strip_html }}</p>
    {% endif %}
    {% if section.settings.section_title == blank %}
      <h3 class="section-heading">{{ collections['best-sellers'].title | strip_html }}</h3>
    {% else %}
      <h3 class="section-heading">{{ section.settings.section_title | strip_html }}</h3>
    {% endif %}
  </div> 

  <div class=" featuredSwiper">

    <div class="swiper-wrapper">

      {% for product in collections['best-sellers'].products %}

        <div class="swiper-slide">

          <a href="{{ product.url }}">
            <div class="product-card-image-container">
              <img class="image" src="{{ product.featured_image | image_url }}" loading="lazy" width="100" height="100">
            </div>
          </a>
          <div class="product-card-price-info">
            <p class="product-title">{{ product.title | link_to: product.url | strip_html }}</p>
            <p class="product-price">
              <span style="color: black;"> {% render 'icon-cash-black' %}</span>
              {{ product.price | money | strip_html }}
            </p>
          </div>
        </div>

      {% endfor %}


    </div>
    <div id="featured-swiper-prev" class="swiper-button-prev"></div>
    <div id="featured-swiper-next" class="swiper-button-next"></div>
    <div id="featured-swiper-pagination" class="swiper-pagination"></div>
  </div>
</div>

<style>
 
</style>

<script>

</script>

{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "richtext",
      "id": "section_title",
      "label": "Section title"
    },
    {
      "id": "title_subtext",
      "type": "textarea",
      "label": "Section description"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    }
  ],
  "presets": [{ "name": "Featured collection" }],
  "tag": "section",
  "class": "featured-collection__main-container section page-width",
  "limit": 1
}
{% endschema %}
