
  <div class="section-heading-container">
    <p class="section-subheading">{{ section.settings.heading_subtitle | strip_html }}</p>
    <h4><span class="section-heading">{{ section.settings.section_heading | strip_html }}</span></h4>
  </div>

  <div class="swiper partnerSwiper">
    <div class="swiper-wrapper">
      {% for product in collections.Partners.products %}
        <div class="swiper-slide picture-frame">
          <div class="our-partners-image-container">
            <img class="our-partners-image image" src="{{ product.featured_image | image_url }}" loading="eager" width="100" height="100">
          </div>
        </div>
      {% endfor %}
    </div>  

  </div>

  <div class="" style="margin-top: 3rem; display: flex; gap: 2rem; ">
 
        <button class="btn-brands btn-red" type="button "  >MORE BRANDS</button>
        <div style="position: relative; width: 100px;">
          <div class="swiper-button-next our-partners-swiper-btn our-partners-swiper-next-btn" ></div> 
        </div>
   
  </div>


{% schema %}
{
  "name": "Our partners",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label" : "Section heading"
    },
    {
      "type" : "text",
      "id" : "heading_subtitle",
      "label" : "Heading subtitle"
    }
  ],
  "limit": 2,
  "class": "our-partners__main-container section page-width",
  "tag": "section",
  "presets": [{ "name": "Our partners" }],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "Collection",
      "type": "collection_item",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ]
}
{% endschema %}
