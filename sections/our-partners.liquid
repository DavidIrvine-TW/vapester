<div class="section-our-partners page-width">
  <div class="partners-section-heading">
    <p>{{ section.settings.heading_subtitle |  strip_html }}</p>
    <h4 class="section-heading">{{ section.settings.section_heading |  strip_html }}</h4>
  </div>

  <div class="our-partners-carousel-container partners">
    {% for product in collections.Partners.products %}
      <div class="picture-frame">
        <div class="our-partners-image-container">
          <img class="our-partners-image image" src="{{ product.featured_image | image_url }}" loading="lazy" width="100" height="100">
        </div>
      </div>
    {% endfor %}
  </div>

</div>


{% schema %}
{
  "name": "Our partners",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label" : "Section heading"
    },
    {
      "type" : "text",
      "id" : "heading_subtitle",
      "label" : "Heading subtitle"
    }
  ],
  "limit": 2,
  "class": "our-partners__main-container",
  "tag": "section",
  "presets": [{ "name": "Our partners" }],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "Collection",
      "type": "collection_item",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ]
}
{% endschema %}
