<div class="section-page-banner">
  <img class="image" loading="lazy" width="100" height="100" src="{{ section.settings.banner_backdrop | image_url}}">
  <div class="section-page-banner-inner page-width">
<div class="section-page-banner-title-container {% if collection.title %} page-banner-collection {% else %} page-banner-page {% endif %} ">

      {% if collection.title and collection.handle == 'all' %}
      <p class="section-page-banner-subheading" style="">Collection:</p>
      <h1 class="section-page-banner-heading">ALL {{ collection.title }}</h1>
      {% elsif collection.title %}
      <span class="section-page-banner-subheading">Collection:</span>
      <h1 class="section-page-banner-heading">{{ collection.title }}</h1>
      {% else %}
      <h1 class="section-page-banner-heading">{{ section.settings.banner_heading }}</h1>
      {% endif %}


    </div>
  </div>

</div>







{% schema %}
{
"name":"Page banner",
"settings" : [
{
"type": "richtext",
"id": "banner_heading",
"label" : "Banner heading"
},
{
"type":"image_picker",
"id": "banner_backdrop",
"label": "Banner image"
}
],
"presets" : [{"name" : "Page banner"}],
"limit" : 2,
"tag": "section",
"class" : "section-page-banner__main-container"
}
{% endschema %}